<% content_for(:title, @task.name) %>
<% content_for(:actions, actions_for(@task, :edit, :delete)) %>
<% content_for(:back_link, tasks_path) %>

<%= render AttributesTableComponent.new(@task, [
  :description,
  :due_date,
  :completed,
  { contact: [:name_link] },
  { company: [:name_link] },
  { project: [:name_link] },
]) %>

<% if !@task.completed %>
  <%= simple_form_for(@task) do |f| %>
    <%= f.hidden_field :completed, value: true %>
    <%= f.button :submit, 'Mark Completed' %>
  <% end %>
  <br />
<% end %>
