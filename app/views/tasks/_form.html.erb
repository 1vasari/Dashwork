<%= simple_form_for(@task) do |f| %>
  <%= render 'common/form_errors', form: f %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.association :tags, collection: current_user.task_tags.all %>
  <%= f.association :contact %>
  <%= f.association :company %>
  <%= f.association :project %>
  <%= f.button :submit %>
<% end %>
