<% content_for(:title, 'Custom Fields') %>
<% content_for(:actions) do %>
  <%= link_to polymorphic_path([:new, @domain, :field]), class: 'navbar-item' do %>
    <%= icon_for :create %>
  <% end %>
<% end %>

<% if @fields.empty? %>
  <div>
    You haven't created any <%= @domain %> custom fields yet.
  </div>
<% else %>
  <%= render 'common/index_table', items: @fields, fields: [:name, :created_at] %>
<% end %>
