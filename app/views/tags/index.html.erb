<% content_for(:title, 'Tags') %>
<% content_for(:actions) do %>
  <%= link_to polymorphic_path([:new, @type, :tag]), class: 'navbar-item' do %>
    <%= icon_for :create %>
  <% end %>
<% end %>
<% content_for(:sidebar) { render 'tags/sidebar' } %>

<% if @tags.empty? %>
  <div>
    You haven't created any <%= @type_plural %> yet.
  </div>
<% else %>
  <%= render(
    'common/index_table',
    items: @tags,
    fields: [:name, :created_at]
  ) %>
<% end %>
