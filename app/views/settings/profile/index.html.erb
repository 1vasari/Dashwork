<% content_for(:title, 'Profile') %>

<%= simple_form_for [:settings, current_user], url: settings_profile_path(current_user) do |f| %>
  <%= render 'common/form_errors', form: f %>
  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :country %>
  <%= f.input :time_zone %>
  <%= f.button :submit %>
<% end %>
