<% content_for(:title, 'Profile') %>
<% content_for(:page_style, :document) %>

<%= simple_form_for [:settings, @user], url: settings_profile_path do |f| %>
  <%= render 'common/form_errors', form: f %>
  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :country %>
  <%= f.input :time_zone %>
  <%= f.button :submit %>
<% end %>
