
<%= simple_form_for(@company) do |f| %>
  <%= render 'common/form_errors', form: f %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :website %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.association :groups %>

  <%= f.button :submit %>
<% end %>
