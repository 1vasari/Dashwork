<%= simple_form_for company do |f| %>
  <%= render 'common/form_errors', form: f %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :website %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.association :groups %>

  <% company.custom_values.each do |cv| %>
    <%= f.fields_for :custom_values, cv do |cv_form| %>
      <%= cv_form.input :value, label: cv.field.name %>
    <% end %>
  <% end %>

  <%= f.button :submit %>
<% end %>
