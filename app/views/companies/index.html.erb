<% content_for(:title, 'Companies') %>
<% content_for(:back_link, root_path) %>
<% content_for(:actions, actions_for(Company, :create)) %>
<% content_for(:sidebar) { render 'companies/sidebar' } %>

<% if @companies.empty? %>
  <div>
    You haven't created any companies yet.
  </div>
<% else %>
  <%= render 'companies', companies: @companies %>
<% end %>
