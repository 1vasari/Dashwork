<h2>Company Details</h2>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<p>
  <strong>Website:</strong>
  <%= @company.website %>
</p>

<p>
  <strong>Email:</strong>
  <%= @company.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @company.phone %>
</p>

<%= link_to 'Edit', edit_company_path(@company) %> /
<%= link_to 'Delete', company_path(@company), method: :delete, data: { confirm: 'Are you sure you want to delete this company?' } %>

<h2>Notes</h2>

<p>
  <%= render 'notes/notes', notes: @company.notes %>
</p>

<p>
  <%= button_to 'New Note', new_note_path(company_id: @company.id), method: :get %>
</p>

<%= link_to 'Back', companies_path %>
