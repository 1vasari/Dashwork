<h2>Company Details</h2>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<p>
  <strong>Website:</strong>
  <%= @company.decorate :website %>
</p>

<p>
  <strong>Email:</strong>
  <%= @company.decorate :email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @company.decorate :phone %>
</p>

<%= link_to 'Edit', edit_company_path(@company) %> /
<%= link_to 'Delete', company_path(@company), method: :delete, data: { confirm: 'Are you sure you want to delete this company?' } %>

<h2>Notes</h2>

<p>
  <%= render 'notes/notes', notes: Array(@company.notes) %>
</p>

<p>
  <%= link_to 'New Note', new_note_path(company_id: @company.id) %>
</p>

<h2>Contacts</h2>

<p>
  <%= render 'contacts/contacts', contacts: Array(@company.contacts) %>
</p>

<p>
  <%= link_to 'Add Contact', new_contact_path(company_id: @company.id) %>
</p>


<h2>Tasks</h2>

<p>
  <%= render 'tasks/tasks', tasks: Array(@company.tasks) %>
</p>

<p>
  <%= link_to 'New Task', new_task_path(company_id: @company.id) %>
</p>

<h2>Projects</h2>

<p>
  <%= render 'projects/projects', projects: Array(@company.projects) %>
</p>

<p>
  <%= link_to 'New Project', new_project_path(company_ids: [@company.id]) %>
</p>

<%= link_to 'Back', companies_path %>
