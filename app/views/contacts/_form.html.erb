<%= simple_form_for(contact) do |f| %>
  <%= render 'common/form_errors', form: f %>

  <%= f.input :title, collection: Contact::TITLES %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :nickname %>
  <%= f.input :address %>
  <%= f.association :company %>
  <%= f.input :job_title %>
  <%= f.input :job_department %>
  <%= f.input :description %>
  <%= f.association :tags, collection: current_user.contact_tags.all %>
  <%= f.input :website %>
  <%= f.input :email %>
  <%= f.input :mobile_phone %>
  <%= f.input :work_phone %>
  <%= f.input :home_phone %>
  <%= f.input :birthday %>

  <%= render 'common/custom_values_form', form: f, item: contact %>

  <%= f.button :submit %>
<% end %>
