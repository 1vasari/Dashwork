<%= simple_form_for(note) do |f| %>
  <%= render 'common/form_errors', form: f %>
  <%= f.input :content %>
  <%= f.association :contact %>
  <%= f.association :company %>
  <%= f.association :project %>
  <%= f.association :groups, collection: current_tenant.note_groups.all %>
  <%= f.button :submit %>
<% end %>
