<%= render IndexTableComponent.new(
  notes,
  [
    :author,
    :preview,
    :links,
    :updated_at
  ],
  row_classes: {
    updated_at: 'is-hidden-mobile',
    tags: 'is-hidden-mobile',
    links: 'is-hidden-mobile',
  }
) %>

<% if notes.respond_to? :total_pages %>
  <%= paginate notes %>
<% end %>
