<% content_for(:title, 'Form Field') %>
<% content_for(:back_link, form_template_fields_path(@form_template)) %>
<% content_for(:actions) do %>
  <%= link_to edit_form_template_field_path(@form_template, @field), class: 'navbar-item' do %>
    <%= icon_for :edit %>
  <% end %>
  <%= link_to form_template_field_path(@form_template, @field), class: 'navbar-item', method: :delete, data: { confirm: 'Are you sure you want to delete this form field?' } do %>
    <%= icon_for :delete %>
  <% end %>
<% end %>

<%= render AttributesTableComponent.new(@field, [:label, :type]) %>
