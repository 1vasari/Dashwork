<%= simple_form_for(project) do |f| %>
  <%= render 'common/form_errors', form: f %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :status, as: :select, collection: Project::STATUSES, label_method: :capitalize %>
  <%= f.association :tags, collection: current_user.project_tags %>
  <%= f.association :contacts %>
  <%= f.association :companies %>

  <%= render 'common/custom_values_form', form: f, item: project %>

  <%= f.button :submit %>
<% end %>
