<%= simple_form_for(@project) do |f| %>
  <%= render 'common/form_errors', form: f %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.association :tags, collection: current_tenant.project_tags %>
  <%= f.association :contacts %>
  <%= f.association :companies %>

  <%= f.button :submit %>
<% end %>
