<% if form.object.errors.size > 0 %>
  <article class="message is-danger">
    <div class="message-header">
      Error
    </div>
    <div class="message-body">
      <ul>
        <% form.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </article>
<% end %>
