<% if !item.new_record? %>
  <% item.build_custom_values.each do |cv| %>
    <%= form.fields_for :custom_values, cv do |cv_form| %>
      <%= cv_form.input :value, label: cv.custom_field.name, as: cv.form_field_type %>
      <%= cv_form.input :custom_field_id, as: :hidden %>
    <% end %>
  <% end %>
<% end %>
