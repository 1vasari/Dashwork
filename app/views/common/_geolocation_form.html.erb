<% if form.object.new_record? && form.object.respond_to?(:build_geolocation) %>
  <% form.object.build_geolocation unless form.object.geolocation.present? %>
  <%= form.fields_for :geolocation do |m| %>
    <%= m.input :longitude, input_html: { 'data-x-frontend-value': 'longitude'} %>
    <%= m.input :latitude, input_html: { 'data-x-frontend-value': 'latitude'} %>
  <% end %>
<% end %>
