<% content_for(:title, "#{@display_as_plural.capitalize}") %>
<% content_for(:actions) do %>
  <%= link_to polymorphic_path([:new, @domain, :group]), class: 'navbar-item' do %>
    <%= icon_for :create %>
  <% end %>
<% end %>
<% content_for(:sidebar) { render 'groups/sidebar' } %>

<% if @groups.empty? %>
  <div>
    You haven't created any <%= @display_as_plural %> yet.
  </div>
<% else %>
  <%= render(
    'common/index_table',
    items: @groups,
    fields: [:name, :created_at]
  ) %>
<% end %>
